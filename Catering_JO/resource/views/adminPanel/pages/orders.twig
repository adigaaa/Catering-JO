{% extends 'adminPanel/index.twig' %}

{% block content %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Orders</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
      
  <table class="table table-condensed">
	    <thead>
	      <tr>
	        <th>Order #</th>
	        <th>product Name</th>
	        <th>user</th>
	        <th>created at</th>
	        <th>Delete</th>
	      </tr>
	    </thead>
	    <tbody>
	    	{% for order in orders %}
			    <tr>
			    	<td>{{ order.id }}</td>
			    	<td>{{ order.product }}</td>
			        <td>{{ order.username }}</td>
			        <td>{{ order.created_at }}</td>
			        <td><a href="{{ path_for('order.delete') }}{{ order.id }}">Delete</a></td>
			    </tr>
	      {% endfor %}
	    </tbody>
	</table>

{% endblock %}