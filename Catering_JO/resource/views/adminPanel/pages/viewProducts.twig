{% extends 'adminPanel/index.twig' %}
{% block content %}
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">view Products</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
         
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Salary</th>
      </tr>
    </thead>
    <tbody>

      {% for product in products %}
      <tr>
        <td>{{ product.name }}</td>
        <td><img class="img-thumbnail" src="{{ base_url() }}/resource/uploads/{{ product.image }}" width="250" height="250"></td>
        <td width="30%">{{ product.description }}</td>
        <td>${{ product.price }}</td>
        <td><a href="{{ path_for('product.update') }}{{ product.id }}" class="btn btn-primary" >Update</a> </td>
        <td><a href="{{ path_for('product.delete') }}{{ product.id }}" class="btn btn-danger" >Delete</a> </td>
      </tr>
      {% endfor %}

    </tbody>
  </table>


{% endblock %}