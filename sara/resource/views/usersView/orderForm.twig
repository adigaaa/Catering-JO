<body>
<form method="POST" action="{{ path_for('add.order') }}">
  <div class="form-group">
    <label for="exampleFormControlInput1">Product</label>
      <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{ product.name }}">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Example select</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>

    <div class="form-group">
    <label for="exampleFormControlInput1">cost</label>
      <div class="col-sm-10">
      <input type="text" readonly name="price" class="form-control-plaintext" id="cost" value="{{ product.price }}">
    </div>
  </div>
  <input class="btn btn-primary" type="submit" value="Set Order" >
  <input type="hidden" name="products_id" value="{{ product.id }}">
</form>
<script type="text/javascript">
  let select = document.getElementById("exampleFormControlSelect1");
  let price = document.getElementById('cost').value;
  select.addEventListener('change', function() {
    let number = select.options[select.selectedIndex].value;
    document.getElementById('cost').setAttribute('value',price * number);
  });
</script>
  </body>

